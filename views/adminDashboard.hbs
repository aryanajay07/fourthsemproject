          {{#each categories}}
            <li><a href="/categories/{{this.Type}}"><span>{{this.Type}}</span></a></li>
          {{/each}}
            <li><a href="/addrecipes">Add new Recipe</a></li>
        </ul>
      </div>
            <h1>Registered Users</h1>
      <div class="user-list">
      <table id="users">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> {{#each users}}
            <h3>{{this.username}}</h3>
          {{/each}}</td>
      <td>{{#each users}}
            <h3>{{this.email}}</h3>
          {{/each}}</td>
    </tr>
   
  </tbody>
</table>
